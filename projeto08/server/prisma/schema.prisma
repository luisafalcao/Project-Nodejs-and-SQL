generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model curso {
  id            Int             @id @default(autoincrement())
  nome          String          @unique
  descricao     String
  capa          String
  inscricoes    Int
  inicio        String
  created_at    DateTime?       @default(now()) @db.Timestamp(6)
  updated_at    DateTime?       @default(now()) @db.Timestamp(6)
  usuarios      usuario[] @relation("CursoUsuarios")
}

model usuario {
  id            Int             @id @default(autoincrement())
  nome          String
  username      String          @unique
  senha         String
  email         String          @unique
  nascimento    String       
  status        Boolean?        @default(true)
  created_at    DateTime?       @default(now()) @db.Timestamp(6)
  updated_at    DateTime?       @default(now()) @db.Timestamp(6)
  cursos        curso[]         @relation("CursoUsuarios")
}